.first_tab .goods_item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.first_tab .goods_item .item_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .item_img image {
  width: 70%;
  height: 200rpx;
}
.first_tab .goods_item .item_count {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.first_tab .goods_item .item_count .count_titel {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .item_count .count_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
