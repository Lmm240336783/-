.orders_main {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.orders_main .order_item {
  width: 100%;
  padding: 10rpx;
  border-bottom: 4rpx solid #dedede;
}
.orders_main .order_item .order_number_row {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
.orders_main .order_item .order_price_row {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
.orders_main .order_item .order_price_row .price_info {
  color: var(--themeColor);
  font-size: 30rpx;
}
.orders_main .order_item .order_data_row {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
